<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity"
    android:id="@+id/body"
    >

    <ImageView
        android:layout_width="1200dp"
        android:layout_height="400dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/bulan"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/astro"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/card_1"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="-20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                >


                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="6dp"
                    android:alpha="0.8"
                    android:text="Username"
                    android:textColor="@color/primary"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-medium"
                    />

                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:drawableEnd="@drawable/done_icon"
                    android:inputType="textEmailAddress"
                    android:hint="Type your username"
                    android:drawableStart="@drawable/email_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/primary"
                    android:textColorHint="@color/primary"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    />

                <TextView
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="6dp"
                    android:alpha="0.8"
                    android:text="Password"
                    android:textColor="@color/primary"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-medium"
                    android:drawablePadding="5dp"
                    />

                <EditText
                    android:drawableStart="@drawable/ock"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.8"
                    android:drawableEnd="@drawable/eye_icon"
                    android:inputType="textPassword"
                    android:hint="Type your password"
                    android:drawableTint="@color/primary"
                    android:textColorHint="@color/primary"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="sans-serif"
                        android:foregroundTint="@color/primary"
                        android:buttonTint="@color/primary"
                        android:text="Remember me"
                        android:textColor="@color/primary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="forgot password ?"
                        android:textColor="#4C3A51"
                        android:textStyle="italic" />

                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:paddingVertical="10dp"
                    android:text="Login"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18dp"
                    app:cornerRadius="20dp"
                    android:backgroundTint="@color/primary"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/primary"
                        android:text="OR" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="25dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/border"
                        android:padding="9dp"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@drawable/google_ico" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:text="Google"
                            android:textColor="@color/primary"
                            android:textSize="16dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:padding="9dp"
                        android:clickable="true"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@drawable/github_ico" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:text="Facebook"
                            android:textColor="@color/primary"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle"
        android:layout_alignTop="@+id/card_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/baseline_supervised_user_circle_24"
        android:layout_alignTop="@+id/card_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        />

</RelativeLayout>